<div class="">
  <h2 class="inline-block align-middle text-sm">
    {{ 'sharing.social_sharing.title' | t }}
  </h2>
  {% if settings.share_facebook %}
    <a class="inline-block w-5 ml-4 align-middle fill-current" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      {% render 'icon-facebook' %}
      <span class="sr-only">{{ 'sharing.social_sharing.facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a class="inline-block w-5 ml-4 align-middle fill-current" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      {% render 'icon-twitter' %}
      <span class="sr-only">{{ 'sharing.social_sharing.twitter' | t }}</span>
    </a>
  {% endif %}

  {% liquid
    unless share_image
      assign share_image = page_image
    endunless
  %}

  {% if settings.share_pinterest %}
    <a class="inline-block w-5 ml-4 align-middle fill-current" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | image_url: width: 1024, height: 1024 }}&amp;description={{ share_title | url_param_escape }}">
      {% render 'icon-pinterest' %}
      <span class="sr-only">{{ 'sharing.social_sharing.pinterest' | t }}</span>
    </a>
  {% endif %}

</div>
