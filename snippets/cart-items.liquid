<div
  x-data="ThemeModule_CartItems"
  data-cart-items
  class="flex-auto flex flex-col {% unless template == 'cart' %}overflow-hidden overflow-y-auto{% endunless %}"
>
  {% if cart != empty %}
    {%- liquid
      assign cart_item_grid_container = 'grid-cols-8 gap-0 auto-rows-max'
      if template == 'cart'
        assign cart_item_grid_container = cart_item_grid_container | append: ' lg:grid-cols-14'
      endif
    -%}
    <form action="{{ routes.cart_url }}" method="post" id="cart">
      <div class="py-4 flex-auto overflow-hidden overflow-y-auto">
        {% if template == 'cart' %}
          <div class="sw-hidden lg:grid {{ cart_item_grid_container }} border-b border-scheme-text items-end pb-5 mb-5">
            <h1 class="lg:col-span-8 font-heading text-2xl">{{ 'cart.general.title' | t }}</h1>
            <p class="lg:col-span-3 justify-self-start">{{ 'cart.label.quantity' | t }}</p>
            <p class="lg:col-span-3 justify-self-end">{{ 'cart.label.total' | t }}</p>
          </div>
        {% endif %}
        <ul :key="cart-items" class="grid grid-cols-1 gap-2">
          {% assign cart_savings = 0 %}
          {% for item in cart.items %}
            {% if item.variant.compare_at_price > item.variant.price %}
              {% assign item_savings = item.variant.compare_at_price | minus: item.variant.price %}
              {% assign line_savings = item_savings | times: item.quantity %}
              {% assign cart_savings = line_savings | plus: cart_savings %}
            {% endif %}
          {% endfor %}
          <div
            id="docapp-cart-savings"
            data-savings="{{ cart_savings }}"
            data-compare-title="Originalpriset"
            data-savings-title="Redan nedsatta varor"
          ></div>
          {% for item in cart.items %}
            <li
              data-cart-item-key="{{ item.key }}"
              data-original-price="{{ item.variant.compare_at_price | default: item.final_line_price }}"
              data-discounted-price="{{ item.variant.price | default: item.final_line_price }}"
              key="CartItem-{{ forloop.index }}-{{ item.key }}"
              class="mini-cart-item grid {{ cart_item_grid_container }}"
              :class="{ 'opacity-50': locked === $el }"
              key="CartItem-{{ forloop.index }}-{{ item.key }}"
              class="mini-cart-item grid {{ cart_item_grid_container }}"
              :class="{ 'opacity-50': locked === $el }"
            >
              <div class="col-span-1 {% if template == 'cart' %} lg:max-w-[75px] {% endif %} row-span-1">
                {% if item.image %}
                  <a href="{{ item.url }}" class="block" aria-hidden="true" tabindex="-1">
                    {{ item | image_url: width: 75 | image_tag: loading: 'lazy', class: 'mini-image' }}
                  </a>
                {% endif %}
              </div>
              <div class="p-1 text-xxs {% if template == 'cart' %} lg:col-span-6 lg:row-span-2 {% endif %}">
                <div>
                  <a class="block" href="{{ item.url }}">
                    <div data-product-title>
                      <p class="font-heading product-title text-xxs lg:text-xxs leading-2 break-word">
                        {{ item.product.title }}
                      </p>
                      {% unless item.product.has_only_default_variant %}
                        <p class="variant-title text-xxs mt-1 break-word">{{ item.variant.title }}</p>
                      {% endunless %}
                    </div>
                    {% if settings.cart_vendor_enable %}
                      <p class="text-xxs mt-1 break-word">{{ item.vendor }}</p>
                    {% endif %}
                    {% if item.selling_plan_allocation %}
                      <p class="text-xxs mt-1 break-word">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                    {% endif %}
                    {% comment %}theme-check-disable LiquidTag{% endcomment %}
                    {%- assign property_size = item.properties | size -%}
                    {% comment %}theme-check-enable LiquidTag{% endcomment %}
                    {% if property_size > 0 %}
                      {% for p in item.properties %}
                        {% assign first_character_in_key = p.first | slice: 0 %}
                        {% unless p.last == blank or first_character_in_key == '_' %}
                          <p class="text-xxs mt-1 break-word">
                            {{ p.first }}:
                            {% if p.last contains '/uploads/' %}
                              <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                            {% else %}
                              {{ p.last }}
                            {% endif %}
                          </p>
                        {% endunless %}
                      {% endfor %}
                    {% endif %}
                  </a>
                  {%- if item.line_level_discount_allocations != blank or item.unit_price_measurement -%}
                    <div
                      {% if template == 'cart' %}
                        class="lg:mb-1"
                      {% endif %}
                    >
                      {%- if item.line_level_discount_allocations != blank -%}
                        <ul class="text-xxs text-scheme-accent" aria-label="{{ 'customer.order.discount' | t }}">
                          {%- for discount_allocation in item.line_level_discount_allocations -%}
                            <li class="order-discount__item mt-1 break-word">
                              {{ discount_allocation.discount_application.title }}
                              {% if discount_allocation.amount > 0 -%}
                                (-{{ discount_allocation.amount | money }})
                              {%- endif %}
                            </li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                      {%- if item.unit_price_measurement -%}
                        <div class="text-xxs mt-1 {% if item.original_price != item.final_price %} text-scheme-accent {% else %} text-scheme-meta {% endif %}">
                          {{ item.unit_price | money }} /&nbsp;
                          {%- if item.unit_price_measurement.reference_value != 1 -%}
                            {{- item.unit_price_measurement.reference_value -}}
                          {%- endif -%}
                          {{ item.unit_price_measurement.reference_unit }}
                        </div>
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
                <div class="quantity-selector {% if template == 'cart' %} lg:flex lg:justify-start lg:ml-0 {% endif %}">
                  <label class="sr-only" for="updates_{{ item.key }}">{{ 'cart.label.quantity' | t }}:</label>
                  <div class="flex items-center space-x-1">
                    <button class="quantity-btn" aria-label="Decrease quantity" @click.prevent.stop="decrement()">
                      -
                      <!-- Replace with your minus icon -->
                    </button>
                    <input
                      type="number"
                      class="quantity-input"
                      name="updates[]"
                      id="updates_{{ item.key }}"
                      value="{{ item.quantity }}"
                      size="4"
                      data-last-value="{{ item.quantity }}"
                      readonly
                      @change="itemQuantityChange()"
                      @keyup.debounce.750ms="$dispatch('change')"
                    >
                    <button class="quantity-btn" aria-label="Increase quantity" @click.prevent.stop="increment()">
                      +
                      <!-- Replace with your plus icon -->
                    </button>
                  </div>
                </div>
                <div class="hidden {% if template == 'cart' %} lg:block {% endif %}">
                  <p class="text-xxs {% if template == 'cart' %} lg:mt-3 {% endif %}">
                    <a class="hover:text-scheme-accent" href="{{ item.url_to_remove }}" @click.prevent="remove()">
                      {{ 'cart.general.remove' | t: product: item.title }}
                    </a>
                  </p>
                </div>
              </div>
              <div class="col-start-3 row-start-1 {% if template == 'cart' %} lg:col-span-3 lg:row-span-2 {% endif %} text-right p-2">
                {% assign discounted = false %}
                {% if item.variant.compare_at_price > item.variant.price %}
                  {% assign discounted = true %}
                  <del class="price-original block">
                    {{ item.variant.compare_at_price | times: item.quantity | money }}
                  </del>
                  <span class="price-discounted block text-scheme-accent">
                    {{ item.final_line_price | money }}
                  </span>
                {% else %}
                  {{ item.original_line_price | money }}
                {% endif %}
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </form>
  {% else %}
    <div class="py-section text-center">
      <p>{{ 'cart.general.empty' | t }}</p>
    </div>
  {% endif %}
</div>
<p class="sr-only" id="cart-live-region-text" aria-live="polite" role="status" aria-hidden="true">
  {{ 'cart.general.new_subtotal' | t }}: {{ cart.total_price | money_with_currency }}
</p>
<style>
    .mini-image {
      width: 40px;
      height: 60px;
      object-fit: contain;
    }
    .mini-cart-item {
      padding: 4px;
      height: 50px;
      margin-bottom: 35px;
    }
    .cart-item-grid-container {
      row-gap: 0 !important;
    }
    .cart-item-details {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
  .quantity-selector {
    display: flex;
    align-items: center;
     margin-top: auto;
  }
  .quantity-btn {
    width: 20px;
    height: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: transparent;
    border: none;
    cursor: pointer;
    font-size: 14px;
  }

  .quantity-input {
    width: 40px;
    height: 20px;
    text-align: center;
    border: 1px solid #ccc;
  }
  .title-wrapper {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      padding-left: 20px; /
  }

  .product-title, .variant-title {
      margin: 0;
      padding: 0;
    font-size: 12px
  }
  .price-original, .price-discounted, .price-normal {
    font-size: 12px;
  }
  .price-discounted {
    font-size: 12px;
    color: #A90606;
    font-weight: bold;
  }
</style>
