<div
  class="{{ block_base_classes }} my-6 group-first:mt-0"
  data-disable-variance
  {{ block.shopify_attributes }}
>
  <ul class="flex flex-wrap items-start justify-start -mx-2">
    {% if block.settings.linklist == empty %}
      {% for i in (1..3) %}
        <li class="mx-2 mb-2">
          <a
            href="#"
            class="text-theme-basic theme-link"
          >
            {{ 'products.product.onboarding.supporting_link' | t }} {{ i }}
          </a>
        </li>
      {% endfor %}
    {% else %}
      {% for supporting_link in block.settings.linklist.links %}
        <li class="mx-2 mb-2 break-word">
          <a
            href="{{ supporting_link.url }}"
            class="text-theme-basic theme-link"
          >
            {{- supporting_link.title | escape | strip -}}
          </a>
        </li>
      {% endfor %}
    {% endif %}
  </ul>
</div>

