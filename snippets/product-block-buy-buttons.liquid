<link rel="stylesheet" href="{{ 'payment-terms.css' | asset_url }}">
<div
  class="{{ block_base_classes }} my-3 product-block-buy-buttons"
  {{ block.shopify_attributes }}
  data-disable-variance
>
  {% if product != blank %}
    {% liquid
      assign gift_card_recipient_feature_active = false

      if block.settings.show_gift_card_recipient and product.gift_card?
        assign gift_card_recipient_feature_active = true
      endif
    %}
    {% form 'product',
      product,
      name: product_form_id,
      id: product_form_id,
      data-product-form: '',
      data-product-handle: product.handle,
      data-enable-history-state: 'true',
      data-product-form: '',
      x-ref: 'productForm',
      class: 'product-form my-8 group-first:mt-0'
    %}
      {{ form | payment_terms }}

      <div class="{% if product.has_only_default_variant %} hidden {% else %} no-js my-4 {% endif %}">
        <label
          class="{{ label_class }}"
          for="fallback-selector-{{ section.id }}"
          >Variant</label
        >
        <select
          x-ref="singleVariantSelector"
          name="id"
          id="fallback-selector-{{ section.id }}"
          class="font-secondary text-sm"
        >
          {% for variant in product.variants %}
            <option
              {% if variant == current_variant %}
                selected="selected"
              {% endif %}
              {% unless variant.available %}
                disabled="disabled"
              {% endunless %}
              x-bind:selected="currentVariantId === {{ variant.id }}"
              value="{{ variant.id }}"
            >
              {{ variant.title }}
            </option>
          {% endfor %}
        </select>
      </div>

      {%- liquid
        assign enable_payment_buttons = block.settings.enable_payment_button
        assign button_text = 'products.product.add_to_cart' | t

        if template == 'product.preorder'
          assign enable_payment_buttons = false
          assign button_text = 'products.product.preorder' | t
        endif

        if gift_card_recipient_feature_active == true
          assign enable_payment_buttons = false
        endif
      -%}

      {% if enable_payment_buttons %}
        {% capture add_to_cart_class %}theme-button--secondary{% endcapture %}
      {% else %}
        {% capture add_to_cart_class %}theme-button--solid{% endcapture %}
      {% endif %}

      {% if gift_card_recipient_feature_active %}
        <div class="my-5">
          {% render 'gift-card-recipient-form',
            product: product,
            form: form,
            section: section
          %}
        </div>
      {% endif %}

      <div>
        <div class="w-full">
          {%
            render 'add-to-cart-button',
            current_variant: current_variant,
            add_to_cart_class: add_to_cart_class,
            button_text: button_text,
          %}
        </div>

        {% if enable_payment_buttons %}
          <div class="dynamic-payment-buttons mt-4">
            {{ form | payment_button }}
          </div>
        {% endif %}
      </div>
<!--Smart file default--->
                            {% render 'smarth', hideAssets:'0', product: product, smarthOuterClass: 'smart-mt-4 smart-mb-4' %}
<!--Smart file default--->
                            {% render 'smartn', product: product, smartnInnerStyle:'margin-top:10px;'%}
 <!--Smart Banner default--->
                            {% render 'smartban', product: product, smartbanGroup:'2', smartbanOuterClass:'smart-mb-2 smart-mt-2 smart-text-left', smartbanOuterStyle:'', smartbanInnerStyle:'', smartbanInnerClass: 'smart-d-block smart-mb-1' %}
           <!--Smart Table default--->                       
 {% render 'smartt', hideAssets:'0', product: product, smarttGroup: ‘1’ %}
      {%- if settings.cart_type == 'page'
        or settings.open_drawer_on_add_to_cart == false
      -%}
        <div
          class="mt-4 mb-8 text-theme-basic"
          tabindex="-1"
          x-ref="added"
          x-show="addedToCart"
          x-cloak
          x-transition:enter="transition ease duration-300"
          x-transition:enter-start="opacity-0"
          x-transition:enter-end="opacity-100"
          x-transition:leave="transition ease duration-300"
          x-transition:leave-start="opacity-100"
          x-transition:leave-end="opacity-0"
        >
          {{ 'products.product.added_to_cart' | t }}!
          {{
            'products.product.add_to_cart_confirm_html'
            | t:
              cart_url: routes.cart_url,
              link_url: routes.all_products_collection_url
          -}}
          .
        </div>
      {%- endif -%}
    {% endform %}

    {% if block.settings.show_pickup_availability %}
      {% unless request.design_mode %}
        <script
          src="{{ 'vendor-store-availability.bundle.min.js' | asset_url }}"
          type="module"
        ></script>
        <script
          src="{{ 'store-availability.js' | asset_url }}"
          type="module"
        ></script>
      {% endunless %}
      <template x-if="currentVariantId && currentVariantAvailable && currentVariantAvailabilityClosestLocation">
        <div
          class="my-8 flex items-start"
          :class="{ 'opacity-50': $store.availability.loading }"
          :aria-busy="$store.availability.loading"
        >
          <div class="w-5 h-5 mt-[.0625rem] mr-1 basis-5 grow-0 shrink-0">
            <template x-if="currentVariantAvailabilityClosestLocation.available">
              {% render 'icon-in-stock' %}
            </template>
            <template x-if="!currentVariantAvailabilityClosestLocation.available">
              {% render 'icon-out-of-stock' %}
            </template>
          </div>
          <div class="flex-auto">
            <h2
              x-html="currentVariantAvailabilityClosestLocation.pickup_text"
              class="text-sm break-word"
            ></h2>
            <small
              class="block mt-2 text-sm"
              x-html="currentVariantAvailabilityClosestLocation.pickup_time"
            ></small>
            <button
              type="button"
              @click="$store.availability.current_variant = currentVariantId; $store.modals.open('availability')"
              aria-haspopup="dialog"
              class="mt-2 text-xs text-scheme-meta text-left"
            >
              <span
                x-html="currentVariantAvailabilityClosestLocation.modal_text"
              ></span>
            </button>
          </div>
        </div>
      </template>
      <div
        class=""
        data-product-title="{{ product.title | escape }}"
        data-has-only-default-variant="{{ product.has_only_default_variant }}"
        data-base-url="{{ routes.root_url }}"
        x-ref="storeAvailabilityContainer"
      ></div>

      <div
        x-data="ThemeComponent_StoreAvailabilityDrawer({{ product.id }})"
        x-cloak
      >
        <div>
          <template data-should-teleport="#right-drawer-slot">
            <div
              class="px-5 lg:px-10"
              :data-modal-label="$store.modals.rightDrawer.contents === 'availability' && $store.availability.current_variant === currentVariantId? product.title : false"
              x-show="$store.modals.rightDrawer.contents === 'availability' && $store.availability.current_variant === currentVariantId"
            >
              <div class="relative flex items-center justify-between mt-5 py-4 border-b border-scheme-text">
                <h1 class="break-word">
                  <div class="font-heading text-lg">{{ product.title }}</div>
                  <div x-text="currentVariantTitle"></div>
                </h1>
                <button
                  @click.prevent="$store.modals.close('availability')"
                  class="block top-0"
                >
                  <span class="sr-only">
                    {{- 'general.accessibility.close_modal' | t -}}
                  </span>
                  <span class="inline-block w-6 h-6">
                    {%- render 'icon-close' -%}
                  </span>
                </button>
              </div>
              <ul class="relative overflow-y-auto flex-auto" role="list">
                <template
                  x-for="item in currentVariantAvailabilityList"
                  :key="item.name"
                >
                  <li class="py-4 mb-5">
                    <p class="font-heading text-lg" x-text="item.name"></p>
                    <div class="flex items-start my-2">
                      <div class="inline-block w-4 h-4 mt-[.225rem] mr-2">
                        <template x-if="item.available">
                          {% render 'icon-in-stock' %}
                        </template>
                        <template x-if="!item.available">
                          {% render 'icon-out-of-stock' %}
                        </template>
                      </div>
                      <div>
                        <p class="text-sm" x-text="item.text"></p>
                      </div>
                    </div>
                    <address class="block not-italic mt-2 text-sm">
                      <div x-html="item.address"></div>
                      <template x-if="item.phone">
                        <div class="mt-2">
                          <a
                            class="theme-link text-sm"
                            :href="`tel:${item.phone.replace(' ', '')}`"
                            x-text="item.phone"
                          ></a>
                        </div>
                      </template>
                    </address>
                  </li>
                </template>
              </ul>
            </div>
          </template>
        </div>
      </div>
    {% endif %}
  {% else %}
    {% comment %}
      Onboarding state if no product
    {% endcomment %}
    {%- liquid
      assign enable_payment_buttons = block.settings.enable_payment_button
      assign button_text = 'products.product.add_to_cart' | t

      if template == 'product.preorder'
        assign enable_payment_buttons = false
        assign button_text = 'products.product.preorder' | t
      endif
    -%}

    {% if enable_payment_buttons %}
      {% capture add_to_cart_class %}theme-button--secondary{% endcapture %}
    {% else %}
      {% capture add_to_cart_class %}{% endcapture %}
    {% endif %}

    <div class="my-8">
      <div class="w-full">
        {%
          render 'add-to-cart-button',
          current_variant: current_variant,
          add_to_cart_class: add_to_cart_class,
          button_text: button_text,
        %}
      </div>
    </div>
  {% endif %}
</div>
