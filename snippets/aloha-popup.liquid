    <script>
      // Keep track of the last opened tab's top offset and element
      let lastOpenedTab = {
        offset: 0,
        element: null,
        id: ""
      };

      function closeTab(accordionContent) {
        if (accordionContent) {
          accordionContent.style.display = "none";
          accordionContent.previousElementSibling.classList.remove("active");
        }
      }

      function toggleAccordion(tabId) {
        // Get the accordion content to toggle
        var accordionToToggle = document.getElementById(tabId);

        // If clicking the same tab that's already open or its content, close it.
        if (lastOpenedTab.id === tabId || (lastOpenedTab.element && lastOpenedTab.element.contains(event.target))) {
          closeTab(lastOpenedTab.element);
          window.scrollTo(0, lastOpenedTab.offset);
          lastOpenedTab.element = null;
          lastOpenedTab.id = "";
          return;
        }

        // Close the currently open tab, if any.
        closeTab(lastOpenedTab.element);

        // Open the new tab and remember its position and ID.
        accordionToToggle.style.display = "block";
        accordionToToggle.previousElementSibling.classList.add("active");
        lastOpenedTab.element = accordionToToggle;
        lastOpenedTab.offset = window.pageYOffset;
        lastOpenedTab.id = tabId;
      }

      // Attach event listeners after the window has loaded
      window.onload = function () {
        // Event listener for accordion buttons
        var accordionButtons = document.querySelectorAll('.accordion-button, .smaller-accordion-button');
        accordionButtons.forEach(button => {
          button.onclick = function() {
            toggleAccordion(this.nextElementSibling.id);
          }
        });

        // Event listener for clicking inside the accordion content
        var accordionContents = document.getElementsByClassName("accordion-content");
        for (var i = 0; i < accordionContents.length; i++) {
          accordionContents[i].onclick = function() {
            toggleAccordion(this.id);
          }
        }
      };
