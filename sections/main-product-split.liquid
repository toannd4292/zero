{% liquid
  assign section_color = section.settings.color_scheme
  assign media_width_on_desktop = section.settings.media_width_on_desktop
  assign desktop_media_style = section.settings.desktop_media_style

  assign enable_thumbnails_on_desktop = false
  if product.media.size > 1 and section.settings.enable_thumbnails_on_desktop
    assign enable_thumbnails_on_desktop = true
  endif

  assign current_variant = product.selected_or_first_available_variant
  assign featured_media = current_variant.featured_media | default: product.featured_media

  assign models = product.media | where: 'media_type', 'model'

  for media in product.media
    if media.media_type != 'image'
      assign has_interactive_media = true
      break
    endif
  endfor

  assign enable_image_zoom = section.settings.enable_image_zoom

  assign product_form_id = 'product-form-' | append: section.id

  assign popup_blocks = section.blocks | where: 'type', 'popup'

  assign tallest_media_aspect_ratio = product.media | map: 'aspect_ratio' | sort | first

  assign variant_image_behaviour = section.settings.variant_image_behaviour

  assign scroll_to_variant_media = false

  if variant_image_behaviour != 'swap'
    assign scroll_to_variant_media = true
  endif

  assign desktop_layout = section.settings.desktop_layout

  if desktop_layout == 'product_form_left'
    assign media_position_class = 'md:order-last'
  endif

  if media_width_on_desktop == 'half'
    assign sizes = '100vw, (min-width: 768px) 50vw'
  else
    assign sizes = '100vw, (min-width: 768px) calc(100vw / 12 * 7)'
  endif
%}

{% unless request.design_mode %}
  <script src="{{ 'vendor-product.bundle.min.js' | asset_url }}" type="module"></script>
  <script src="{{ 'product.js' | asset_url }}" type="module"></script>
{% endunless %}

<style>
  #{{ section.id }} {
    /* Calculate the width of the featured media item ... */
    --max-possible-width: min(var(--max-site-width), 100vw);
    --section-width: calc(var(--max-possible-width) - (2.5rem * 2));
    --grid-width: calc(var(--section-width) * 0.875);
    --media-grid-width: calc((var(--grid-width) - var(--grid-gutter)) / 2);
    --media-grid-cols: 6;
    --media-grid-gap-length: 1rem;
    --media-grid-gaps: calc(var(--media-grid-cols) - 1);
    --media-grid-total-gaps: calc(var(--media-grid-gap-length) * var(--media-grid-gaps));
    --thumbs-width: calc((var(--media-grid-width) - var(--media-grid-total-gaps)) / var(--media-grid-cols));
    --feature-media-width: calc(var(--media-grid-width) - var(--thumbs-width) - var(--media-grid-gap-length));
    /* ... grab the tallest aspect ratio in product media ... */
    --tallest-media-aspect-ratio: {{ tallest_media_aspect_ratio }};
    /* ... calculate the tallest mediaâ€™s height in vw and apply to thumbnails */
    --thumbnails-height: calc(var(--feature-media-width) / var(--tallest-media-aspect-ratio));
  }
</style>

<section
  class="text-scheme-text bg-scheme-background md:min-h-screen-less-header-group"
  data-color-scheme="{{ section_color }}"
  id="{{ section.id }}"
  x-data="
    Theme_Product({
      product: {{ product | json | escape }},
      variant: {{ current_variant | json | escape }},
      featuredMediaID: {% if featured_media %}{{ featured_media.id }}{% else %}null{% endif %}
    })
  "
  data-product-section
  @product-url-update.stop="window.history.replaceState({ path: $event.detail.url }, '', $event.detail.url);"
>
  <div class="relative z-10 md:h-screen-less-header-group">
    <div class="md:grid md:grid-cols-12 md:h-screen-less-header-group">
      <div class="{{ media_position_class }} {% if media_width_on_desktop == 'wide' %}md:col-span-7{% else %}md:col-span-6{% endif %}">
        {%- if section.settings.add_additional_space_above_media -%}
          <div class="h-header md:hidden"></div>
        {%- endif -%}
        {% if product.media.size > 0 %}
          <div class="md:h-screen-less-header-group w-full">
            {% if product.media.size == 1 %}
              <div class="md:h-full">
                {% if enable_image_zoom and featured_media.media_type == 'image' %}
                  <a
                    href="{{ featured_media.url }}"
                    role="button"
                    class="cursor-zoom-in"
                    @click.prevent="openZoom({{ featured_media.id }})"
                  >
                {% endif %}
                {% render 'media',
                  media: featured_media,
                  sizes: sizes,
                  shown: true,
                  scroll_to: false,
                  always_shown: true,
                  split: true,
                  split_media_style: desktop_media_style
                %}
                {% if enable_image_zoom and featured_media.media_type == 'image' %}
                  </a>
                {% endif %}
              </div>
            {% else %}
              <div
                id="slideshow-{{ section.id }}"
                x-cloak
                class="ml-5 md:ml-0 splide splide--product   md:h-screen-less-header-group"
                data-split-splide
                data-drag-disabled="{{ has_interactive_media }}"
                data-first-media="{{ featured_media.id }}"
              >
                <div class="splide__track -ml-5 md:ml-0 mb-4 md:mb-0  md:h-screen-less-header-group">
                  <ul class="w-full splide__list -ml-5  md:h-screen-less-header-group" role="list">
                    {% for media in product.media %}
                      <li class="block w-full h-full splide__slide" data-media-id="{{ media.id }}">
                        {% if enable_image_zoom and media.media_type == 'image' %}
                          <a
                            href="{{ media.url }}"
                            role="button"
                            class="cursor-zoom-in"
                            @click.prevent="openZoom({{ media.id }})"
                          >
                        {% endif %}
                        {% render 'media',
                          media: media,
                          sizes: sizes,
                          shown: true,
                          scroll_to: scroll_to_variant_media,
                          always_shown: true,
                          split: true,
                          split_media_style: desktop_media_style
                        %}
                        {% if enable_image_zoom and media.media_type == 'image' %}
                          </a>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                </div>
                {% assign first_3d_model = product.media | where: 'media_type', 'model' | first %}
                {%- if first_3d_model -%}
                  <div class="col-span-2 mb-4 md:mb-0 mr-5 md:mr-0 md:sticky md:bottom-0 md:bg-scheme-background">
                    <button
                      aria-label="{{ 'products.media.view_in_your_space_label' | t }}"
                      class="w-full px-5 py-3 bg-scheme-text/5 text-scheme-text/80"
                      data-shopify-xr
                      data-shopify-model3d-id="{{ first_3d_model.id }}"
                      data-shopify-title="{{ product.title }}"
                      data-shopify-xr-hidden
                    >
                      <span class="inline-block w-6 -mt-1 align-middle">{% render 'icon-model' %}</span
                      ><span class="text-sm">{{ 'products.media.view_in_your_space' | t }}</span>
                    </button>
                  </div>
                {%- endif -%}
                <div
                  class="splide__arrows px-5 md:p-5 md:absolute md:right-0 md:bottom-0 transition-transform"
                  :class="{ 'md:-translate-y-20': video_in_view }"
                >
                  <button class="splide__arrow splide__arrow--prev mr-1">
                    <span class="sr-only">{{ 'sections.slideshow.previous_slide' | t }}</span>
                    <div class="w-8 h-8">
                      {% render 'icon-previous' %}
                    </div>
                  </button>
                  <button class="splide__arrow splide__arrow--next">
                    <span class="sr-only">{{ 'sections.slideshow.next_slide' | t }}</span>
                    <div class="w-8 h-8">
                      {% render 'icon-next' %}
                    </div>
                  </button>
                </div>

                {% if enable_thumbnails_on_desktop and product.media.size < 7 %}
                  <div
                    class="sw-hidden md:block w-24 absolute bottom-0 left-0 px-5 feature-layout-thumbs thumbs-{{ section.id }}-{{ product.id }} transition-transform"
                    :class="{ 'md:-translate-y-20': video_in_view }"
                  >
                    <div class="sticky top-header-height py-5">
                      <ul class="h-full flex flex-col justify-center space-y-5">
                        {% for media in product.media %}
                          <li class="grow-0">
                            <a
                              class="block border"
                              href="{{ media.url }}"
                              :role="`button`"
                              @click.prevent="current_media_id = {{ media.id }}"
                              :class="{ 'border-scheme-text' : current_media_id === {{ media.id }}, 'border-transparent' : current_media_id !== {{ media.id }} }"
                            >
                              {{
                                media.preview_image
                                | image_url: width: 500
                                | image_tag: loading: 'lazy', sizes: 'calc(100vw_/_12)', class: 'block w-auto h-auto'
                              }}
                            </a>
                          </li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>
                {% endif %}

                {% unless request.design_mode %}
                  <script src="{{ 'modules-slideshow.bundle.min.js' | asset_url }}" type="module"></script>
                {% endunless %}
                {{ 'modules-slideshow.bundle.css' | asset_url | stylesheet_tag }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
      <div class="px-5 md:pr-5 lg:pr-10 pb-section md:overflow-y-scroll {% if media_width_on_desktop == 'wide' %}md:col-span-5{% else %}md:col-span-6{% endif %}">
        <div class="xl:pt-10 {% if media_width_on_desktop == 'wide' %}xl:px-5{% else %}lg:px-10 xl:px-20{% endif %} md:sticky md:top-header-height">
          <div class="mt-10" data-product-form-container>
            {%- liquid
              assign block_base_classes = 'max-w-sm px-5 lg:px-10'

              for block in section.blocks
                case block.type
                  when '@app'
                    render 'product-block-app', block: block, block_base_classes: block_base_classes

                  when 'liquid'
                    render 'product-block-liquid', block: block, block_base_classes: block_base_classes

                    if product.handle == 'mix-max'
                      render 'MixMax-accordion'
                    endif

                  when 'title'
                    render 'product-block-title', product: product, block: block, block_base_classes: block_base_classes

                  when 'price'
                    assign price_class = block_base_classes | append: ' my-3'
                    render 'product-form-component-price', product: product, block: block, class: price_class

                  when 'variant_picker'
                    if block.settings.hide_option_labels
                      assign label_class = 'sr-only'
                    else
                      assign label_class = 'block font-secondary my-2'
                    endif
                    assign variant_picker_class = block_base_classes | append: ' ' | append: 'my-8'

                    render 'product-form-component-variant-picker', product: product, block: block, label_class: label_class, class: variant_picker_class

                  when 'quantity_selector'
                    if block.settings.hide_label
                      assign label_class = 'sr-only'
                    else
                      assign label_class = 'block font-secondary my-2'
                    endif

                    render 'product-block-quantity', product_form_id: product_form_id, label_class: label_class, block: block, block_base_classes: block_base_classes

                  when 'buy_buttons'
                    render 'product-block-buy-buttons', product: product, product_form_id: product_form_id, label_class: label_class, current_variant: current_variant, block: block, block_base_classes: block_base_classes

                  when 'star_rating'
                    render 'product-block-star-rating', product: product, block: block, block_base_classes: block_base_classes

                  when 'text'
                    render 'product-block-text', block: block, block_base_classes: block_base_classes

                  when 'rich_text'
                    render 'product-block-rich-text', block: block, block_base_classes: block_base_classes

                  when 'description'
                    render 'product-block-description', product: product, block: block, block_base_classes: block_base_classes

                  when 'complementary'
                    render 'product-block-complementary', product: product, block: block, block_base_classes: block_base_classes

                  when 'supporting_links'
                    render 'product-block-supporting-links', block: block, block_base_classes: block_base_classes

                  when 'popup'

                  when 'popup'
                    render 'aloha-popup', block: block, block_base_classes: block_base_classes

                  when 'collapsible_tabs'
                    render 'product-block-collapsible-tabs', block: block, block_base_classes: block_base_classes

                  when 'icon_list'
                    render 'product-block-icon-list', block: block, block_base_classes: block_base_classes

                  when 'share'
                    render 'product-block-share', product: product, block: block, block_base_classes: block_base_classes
                endcase
              endfor
            -%}

            {% if enable_thumbnails_on_desktop and product.media.size > 6 %}
              <div class="sw-hidden md:block px-5 feature-layout-thumbs lg:px-10 thumbs-{{ section.id }}-{{ product.id }}">
                <div class="sticky top-header-height py-5">
                  <ul class="h-full grid grid-cols-6 gap-2 justify-center">
                    {% for media in product.media %}
                      <li class="grow-0">
                        <a
                          class="block border"
                          href="{{ media.url }}"
                          :role="`button`"
                          @click.prevent="current_media_id = {{ media.id }}"
                          :class="{ 'border-scheme-text' : current_media_id === {{ media.id }}, 'border-transparent' : current_media_id !== {{ media.id }} }"
                        >
                          {{
                            media.preview_image
                            | image_url: width: 500
                            | image_tag: loading: 'lazy', sizes: 'calc(100vw_/_12)', class: 'block w-auto h-auto'
                          }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
    class="relative z-10  md:min-h-screen hidden"
  >
    <div
      class="md:grid md:grid-cols-12   md:min-h-screen"
    >
      <div
        class="
          {{ media_position_class }}
          {% if media_width_on_desktop == 'wide' %}
            md:col-span-7
          {% else %}
            md:col-span-6
          {% endif %}
        "
      ></div>

      <div
        class="
          px-5 md:pr-5 lg:pr-10
          {% if enable_thumbnails_on_desktop %}
            {% if media_width_on_desktop == 'wide' %}
              md:col-span-4
            {% else %}
              md:col-span-5
            {% endif %}
          {% else %}
            pb-section
            {% if media_width_on_desktop == 'wide' %}
              md:col-span-5
            {% else %}
              md:col-span-6
            {% endif %}
          {% endif %}
        "
      >
        <div
          class="
            {% unless enable_thumbnails_on_desktop %}xl:pt-10{% endunless %}
            {% if media_width_on_desktop == 'wide' %}xl:px-5{% else %}lg:px-10 xl:px-20{% endif %}
            md:sticky md:top-header-height
            {% if enable_thumbnails_on_desktop %}md:h-screen-less-header-group md:flex{% else %}md:h-fit{% endif %}
          "
        >
          <div
            class="mt-10"
          ></div>
        </div>
      </div>
    </div>
  </div>
</section>

{% for block in popup_blocks %}
  {% render 'product-popup-block-modal', section_id: section.id, block: block %}
{% endfor %}

{% if models.size %}
  <script type="application/json" id="ModelJson-{{ section.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
  <script>
    window.ProductModel = {
      loadShopifyXR() {
        Shopify.loadFeatures([
          {
            name: 'shopify-xr',
            version: '1.0',
            onLoad: this.setupShopifyXR.bind(this),
          },
        ]);
      },

      setupShopifyXR(errors) {
        if (errors) return;

        if (!window.ShopifyXR) {
          document.addEventListener('shopify_xr_initialized', () =>
            this.setupShopifyXR()
          );
          return;
        }

        document.querySelectorAll('[id^="ModelJson-"]').forEach((modelJSON) => {
          window.ShopifyXR.addModels(JSON.parse(modelJSON.textContent));
          modelJSON.remove();
        });
        window.ShopifyXR.setupXRElements();
      },
    };

    window.addEventListener('DOMContentLoaded', () => {
      if (Shopify.designMode) {
        document.querySelectorAll("[data-shopify-xr-hidden]").forEach(element => element.classList.add('hidden'));
      }
      if (window.ProductModel) window.ProductModel.loadShopifyXR();
    });
  </script>
{% endif %}

{% if enable_image_zoom %}
  {% liquid
    assign modal_id = 'image-zoom-' | append: section.id
    assign zoom_section_url = product.url | append: '?section_id=main-product-zoom'
  %}
  <div
    x-data
    x-init="initTeleport($root)"
    x-cloak
  >
    <template data-should-teleport="#modal-slot">
      <template x-if="$store.modals.modal.contents === '{{ modal_id }}'">
        <div class="text-scheme-text bg-scheme-background">
          <button @click.prevent="$store.modals.close('{{ modal_id }}')" class="block ml-auto fixed mt-5 pt-4 right-10">
            <span class="sr-only">{{ 'general.accessibility.close_modal' | t }}</span>
            <span class="inline-block w-6 h-6 drop-shadow-[0.06rem_0.12rem_0_rgb(var(--color-scheme-background))]">
              {%- render 'icon-close' -%}
            </span>
          </button>
          <div
            id="{{ modal_id }}"
            data-modal-label="{{ product.title }}, {{ 'products.media.media' | t }}"
            x-html="
              $fetchedSection(
                '{{ zoom_section_url }}',
                '.product-zoom'
              )
            "
          ></div>
        </div>
      </template>
    </template>
  </div>
  {% unless request.design_mode %}
    <script src="{{ 'zoom.js' | asset_url }}" type="module"></script>
  {% endunless %}
{% endif %}

